@model IEnumerable<WheelSell.Models.Bike>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Bikes</h2>
    </div>

    <div class="col-6">
        <a class="btn btn-info" asp-action="Create">
            Add New Bike
        </a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>Bike Photo</th>
                <th>Bike Detail</th>
                <th>Price</th>
                <th>Seller Information</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td><img src="@Html.DisplayFor(m=>item.ImagePath)" width="150px" height="100px" /></td>*@
                    <td><img src="~/@item.ImagePath" width="150px" height="100px" /></td>
                    <td>
                        <b>@Html.DisplayFor(m=>item.Make.Name) (@Html.DisplayFor(m=>item.Year)) </b> <br />
                        <b>Model : </b> @Html.DisplayFor(m=>item.Model.Name) <br />
                        <b>Mileage : </b> @Html.DisplayFor(m=>item.Mileage) <br />
                    </td>
                    <td>
                        @Html.DisplayFor(m=>item.Price) @Html.DisplayFor(m=>item.Currency)
                    </td>
                    <td>
                        <b>Name: </b> @Html.DisplayFor(m=>item.SellerName)<br />
                        <b>Email: </b> @Html.DisplayFor(m=>item.SellerEmail)<br />
                        <b>Name: </b> @Html.DisplayFor(m=>item.SellerPhone)<br />
                    </td>
                    <partial name="_TableButtonPartial" model="item.Id"/>

                </tr>

            }
        </table>

        <cs-pager cs-paging-pagenumber = "4"
        cs-paging-totalitems ="4"
        cs-paging-pagesize="1"
        cs-pagenumber-param="pagenumber"
        asp-controller="Bike"
        asp-action="Index">
        </cs-pager>


    </div>
</div>

